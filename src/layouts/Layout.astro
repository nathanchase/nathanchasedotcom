---
import "../styles/global.css";

const title = "Nathan Chase â€” Designer, Developer, Drummer, Dad.";
const description = "Co-founder of Flickchart & 25+ years building for the web. Drummer in The Pauses. Based in Central Florida.";
const siteUrl = "https://www.nathanchase.com";
const ogImage = `${siteUrl}/og-image.png`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon-32.png" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Nathan Chase" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:site" content="@nathanchase" />
    <meta name="twitter:creator" content="@nathanchase" />

    <!-- Structured Data: Person -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Nathan Chase",
      "url": siteUrl,
      "image": `${siteUrl}/apple-touch-icon.png`,
      "jobTitle": "Senior Frontend Developer",
      "description": "Designer, developer, and drummer based in Central Florida",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "FL",
        "addressCountry": "US"
      },
      "sameAs": [
        "https://github.com/nathanchase",
        "https://x.com/nathanchase",
        "https://www.linkedin.com/in/nathanchase",
        "https://bsky.app/profile/nathanchase.com",
        "https://www.instagram.com/nathanchase",
        "https://www.youtube.com/@NathanChase",
        "https://codepen.io/nathanchase"
      ],
      "knowsAbout": ["Web Development", "Frontend Development", "Vue.js", "Nuxt", "UI Design", "UX Design"],
      "worksFor": {
        "@type": "Organization",
        "name": "O3",
        "url": "https://www.o3apps.com"
      },
      "founder": {
        "@type": "WebApplication",
        "name": "Flickchart",
        "url": "https://www.flickchart.com"
      },
      "performerIn": [
        {
          "@type": "MusicGroup",
          "name": "The Pauses",
          "url": "https://thepauses.bandcamp.com",
          "genre": ["Indierocktronica", "Indie Rock"]
        },
        {
          "@type": "MusicGroup",
          "name": "Unsung Zeros",
          "url": "https://unsungzeros.bandcamp.com",
          "genre": ["Pop-Punk", "Rock"]
        },
        {
          "@type": "MusicGroup",
          "name": "Brownie Points",
          "url": "https://browniepoints.bandcamp.com",
          "genre": ["Pop-Punk", "Rock"]
        }
      ]
    })} />

    <!-- Structured Data: WebSite -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Nathan Chase",
      "url": siteUrl,
      "description": description
    })} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Ephesis&family=Gloock&family=Sen:wght@400;700&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Ephesis&family=Gloock&family=Sen:wght@400;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
  </head>
  <body class="grain">
    <slot />
  </body>
</html>
