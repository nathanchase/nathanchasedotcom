---
import { Image } from "astro:assets";
import headshot from "../assets/headshot.png";
---

<section class="min-h-screen flex flex-col items-center justify-center text-center px-6">
  <div class="relative mb-8">
    <!-- Outer glow -->
    <div class="absolute -inset-2 rounded-full bg-amber/10 blur-xl"></div>
    <!-- Copper ring -->
    <div class="relative w-48 h-48 md:w-64 md:h-64 rounded-full p-[3px] bg-gradient-to-br from-amber via-amber-light/40 to-amber/80 shadow-lg shadow-black/50">
      <!-- Inner texture ring -->
      <div class="w-full h-full rounded-full p-[3px] bg-gradient-to-tr from-warm-bg-light via-amber/20 to-warm-bg-light">
        <Image
          src={headshot}
          alt="Nathan Chase"
          width={512}
          densities={[1, 2]}
          format="avif"
          quality={80}
          class="w-full h-full rounded-full object-cover"
        />
      </div>
    </div>
  </div>
  <h1 class="font-display text-7xl md:text-9xl text-cream glow mb-4">Nathan Chase</h1>
  <p class="text-amber-light text-lg md:text-xl tracking-widest uppercase">Designer. Developer. Drummer. Dad.</p>
</section>
